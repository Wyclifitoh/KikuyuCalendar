    <com.kyssanet.kikuyucalendar.JCalendarMonthTopView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/jcalendarmonthview"
        app:dayHeight="32dp"
        app:daytextsize="11sp"
        app:datetextsize="12.4sp"
        app:eventtextsize="10sp"
        app:daytextcolor="#787878"
        app:datetextcolor="#050505"
        app:datemargintop="0dp"
        android:background="@android:color/white"
        app:linewidth="1.1dp"
        app:linecolor="#EDEDED"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/jcalendarmonthview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:textAllCaps="true"
            android:fontFamily="@font/googlesansmed"
            android:id="@+id/monthnameen"
            android:textColor="@color/black"
            android:text="January"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:visibility="gone"
            android:fontFamily="@font/googlesansmed"
            android:id="@+id/description"
            android:textColor="@color/lightblack"
            android:text="Mũgaa wa kerĩ, riũa rĩhiũhĩte o ta Mũgaa. Magetha ma keerĩ nĩrĩo magethagwo nĩ ũndũ matingĩbutha nĩ momĩtio nĩ riũa
This is the second harvest. The sun is as hot as in Mũgaa, the cereals have been dried up by the sun's heat they cannot rot."
            android:paddingStart="8dp"
            android:paddingBottom="8dp"
            android:paddingEnd="8dp"
            android:layout_below="@+id/monthnameen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

