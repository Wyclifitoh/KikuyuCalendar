<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <com.gjiazhe.scrollparallaximageview.ScrollParallaxImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:srcCompat="@drawable/bkg_01_jan" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70.5dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/googlesans_regular"
        android:text="June 2019"
        android:textColor="#464646"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/monthdesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70.5dp"
        android:layout_marginEnd="@dimen/margin_20"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="@dimen/margin_16"
        android:fontFamily="@font/googlesans_regular"
        android:text="Igũnyũ cia thaatũ cikoragwo irĩ nyingĩ nĩ ũndũ mahuti nĩ maingĩ na kĩbii onakĩo gĩkoragwo gĩtumanĩte nĩ mbura.
    Green worms are plenty at this time because the leaves are plentiful and the rains are falling"
        android:textColor="#464646"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>